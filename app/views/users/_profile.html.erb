<style type="text/css">
  .img.img-circle{
    width: 180px;
    height: 180px;
  }
</style>

<div class="col-md-12">
  <div class="col-md-3 text-center">
    <!--User profile-->
    <%= render "users/details" %>
    <!--Navigation-->
    <div>
      <ul class="nav nav-stacked list-group">
        <li>
          <a href="" class="list-group-item" ng-class="{active: isSelected(1)}" ng-click="selectTab(1)">
            <i class="fa fa-user fa-lg fa-fw">
            </i>&nbsp; Overview
          </a>
        </li>
        <li>
          <a href="" class="list-group-item" ng-class="{active: isSelected(2)}" ng-click="selectTab(2)">
            <i class="fa fa-cog fa-lg fa-fw">&nbsp;
            </i>Settings
          </a>
        </li>
        <li role="presentation">
          <%= link_to "Delete account", registration_path(@user), data: { confirm: "Are you sure?" }, method: :delete, :class => "list-group-item" %>
        </li>
        <li role="presentation">
          <%= link_to('Sign Out', destroy_user_session_path, :method => :delete, :class => "list-group-item")%>
        </li>
      </ul>
    </div>
  </div>
  <div class="col-md-9">
    <div class="tab-content">
      <div ng-show="isSelected(1)">
        <%= render "users/overview" %>
      </div>
      <div ng-show="isSelected(2)">
        <div class="col-md-12">
          <%= render partial: "devise/registrations/edit" %>
        </div>
      </div>
    </div>
  </div>
</div>
