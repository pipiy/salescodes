<div class="container">
  <div>
    <div>
      <center>
        <%= link_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class =>"label label-danger", :style => "float: right" %>
      </center>
      <div class="modal-header">
        <h4 class="modal-title text-center">Edit</h4>
      </div>
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:method => :put, :multipart => true}) do |f| %>
        <%= devise_error_messages! %>
        <div class="modal-body">
          <div class="col-sm-12">
            <div class="col-sm-6">
              <div class="form-group">
                <%= f.file_field :avatar  %>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="form-group">
                <%= f.text_field :remote_avatar_url, :class => "form-control", :placeholder => "or image URL"  %>
              </div>
            </div>
          </div>
          <div class="col-sm-12">
            <div class="col-sm-6">
              <div class="form-group">
                <%= f.text_field :first_name, :class => "form-control", :id => "first_name", :placeholder => "First Name" %><br />
              </div>
            </div>
            <div class="col-sm-6">
              <div class="form-group">
                <%= f.text_field :last_name, :class => "form-control", :id => "last_name", :placeholder => "Last Name" %><br />
              </div>
            </div>
            <div class="col-sm-12">
              <div class="form-group">
                <%= f.text_area :short_bio, :class => "form-control", :id => "short_bio", :placeholder => "Mini biography", :rows => "5" %>
                </div>
            </div>
            <div class="col-sm-4">
              <div class="form-group">
                <%= f.password_field :current_password, autocomplete: "off", :class => "form-control", :placeholder => "Old password" %>
              </div>
            </div>
            <div class="col-sm-4">
              <div class="form-group">
                <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "New password" %>
              </div>
            </div>
            <div class="col-sm-4">
              <div class="form-group">
                <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", :placeholder => "Confirm new password" %>
              </div>
            </div>
            <div class="ui buttons padding" style="text-align: center">
              <%= link_to "Back", :back, :class =>"btn btn-default" %>
              <%= f.submit "Save and continue", :class =>"btn btn-success" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(":file").filestyle({icon: false});
</script>
