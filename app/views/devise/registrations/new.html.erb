<div class="col-sm-12">
  <div class="modal-header">
    <h4 class="modal-title text-center">Sign up</h4>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), remote: true) do |f| %>
    <div class="modal-body">
      <%= devise_error_messages! %>
      <div class="col-sm-6">
        <div class="form-group">
          <%= f.text_field :first_name, autofocus: true, :class => "form-control", :id => "first_name", :placeholder => "First name" %><br />
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <%= f.text_field :last_name, autofocus: true, :class => "form-control", :id => "last_name", :placeholder => "Last name" %><br />
        </div>
      </div>
      <div class="col-sm-12">
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, :class => "form-control", :id => "email", :placeholder => "Email Address" %><br />
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", :class => "form-control", :id => "password_confirmation", :placeholder => "Password" %>
          </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", :id => "password_confirmation", :placeholder => "Password Confirmation" %>
          </div>
          <%= f.submit "Sign up", :redirect_to => :root_path, :class =>"btn btn-primary pull-right" %>
      </div>
    </div>
  <% end %>

</div>
