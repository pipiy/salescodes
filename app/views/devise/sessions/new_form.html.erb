<div class="col-sm-12">
  <div class="modal-header">
    <h4 class="modal-title text-center">Login to your private dashboard</h4>
  </div>
  <div class="modal-body">
    <div class="col-sm-12">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), remote: true) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, :class => "form-control", :id => "email", :placeholder => "Email Address" %><br />
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", :class => "form-control", :id => "password", :placeholder => "Password" %>
        </div>
        <%= f.submit "Sign in", :class =>"btn btn-primary pull-right" %>
        <br><br>
        <%= render "devise/shared/links" %>
      <% end %>
    </div>
  </div>
</div>
